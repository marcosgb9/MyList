<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#CCFFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imageResena"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"
            android:src="@drawable/placeholder"
            android:contentDescription="Imagen de la reseña"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center" />

        <!-- Título -->
        <TextView
            android:id="@+id/textTitulo"
            android:text="Título"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" />

        <!-- Género -->
        <TextView
            android:id="@+id/textGenero"
            android:text="Género"
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <!-- Comentario -->
        <TextView
            android:id="@+id/textComentario"
            android:text="Comentario"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="2dp"
            android:layout_gravity="start" />

        <!-- Valoración -->
        <RatingBar
            android:id="@+id/ratingBarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1.0"
            android:progressTint="#FFD700"
            android:secondaryProgressTint="#FFD700"
            android:layout_marginBottom="4dp" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
